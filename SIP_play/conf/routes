# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index()
GET         /login                   controllers.Application.login()
GET         /logout                     controllers.Application.logout()
POST        /login                   controllers.Application.authenticate()

# Subject

POST        /subject/create          controllers.Subjects.add()
POST        /subject/:id/edit        controllers.Subjects.save(id: Long)
POST        /tasks/:id/delete        controllers.Subjects.delete(id: Long)
POST        /tasks/:id/edit          controllers.Subjects.edit(id: Long)
GET         /subjects                controllers.Subjects.blank()
GET         /subjects/create         controllers.Subjects.blankCreate()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

